{
  "name": "robinsch-miner",
  "version": "1.1.5",
  "description": "My GUI crypto miner",
  "main": "index.js",
  "scripts": {
    "start": "electron . --dev",
    "build-win": "electron-builder --win --publish never",
    "build-mac": "electron-builder --mac dmg --publish never",
    "build-linux": "electron-builder --linux appimage --publish never"
  },
  "build": {
    "appId": "com.electron.robinsch-miner",
    "artifactName": "${productName}-${version}.${ext}",
    "productName": "RobinSch-Miner",
    "copyright": "Copyright Â© 2022 robin@robinsch.net",
    "publish": [
      {
        "provider": "github",
        "owner": "Robin-Sch",
        "repo": "robinsch-miner"
      }
    ],
    "mac": {
      "icon": "./build/icon.icns"
    },
    "win": {
      "icon": "./build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "extraResources": [
      "xmrig"
    ]
  },
  "author": {
    "name": "Robin",
    "email": "robin@robinsch.net"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "electron-log": "^4.4.3",
    "electron-updater": "^4.6.1",
    "fs": "^0.0.1-security",
    "https": "^1.0.0",
    "os": "^0.1.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "electron-packager": "^15.4.0"
  }
}
